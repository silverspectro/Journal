doctype html
html
  head
    title= 'Poet Demo'
    meta(charset='utf-8')
    link(rel='stylesheet', href='/css/bootstrap.css')
  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          a.brand(href='/') Poet Demos
          if(user)
              p(style="float:right;color:#fff")= user.username
              a(href="/editor", style="float:right") editor
              a(href="/logout", style="float:right") logout
          else
           a(href="/login", style="float:right") login
    .wrap
      .container
        .row
          .span8
            block content
          .span4
            .well.sidebar-nav
              ul.nav.nav-list
                li.nav-header categories
                - each cat in getCategories()
                  li
                    a(href=categoryURL(cat)) #{cat}
                li.nav-header tags
                - each tag in getTags()
                  li
                    a(href=tagURL(tag)) #{tag}
